!!! XML
!!!
%html
  %head
    %title= "Ukulele/Tom: "+@song+" by "+@artist
    %link{:href=>"/css/blueprint/screen.css", :rel=>"stylesheet", :type=>"text/css", :charset=>"utf-8"}
    %link{:href=>"/css/blueprint/plugins/fancy-type/fancy-type.css", :rel=>"stylesheet", :type=>"text/css", :charset=>"utf-8"}
    %link{:href=>"/css/default.css", :rel=>"stylesheet", :type=>"text/css", :charset=>"utf-8"}
    %script{:src=>"/js/jquery.js", :type=>"text/javascript"}
    %script{:src=>"/js/tab.js", :type=>"text/javascript"}
    %meta{:name=>"keywords", :content=>"tab, ukulele tab, ukulele, uke, uke tab, instrument, tablature, song, lyrics"}
  %body
    #container
      .column.span-16.prepend-1.colborder 
        %h5
          %a{:href=>"/"} Ukulele/Tom Ukulele Tabs
        %h2= @artist+" > "+@song
        #tab= @tab_text
      .column.span-4
        #chords
          %h4 Chords
          -@chords.each do |chord|
            %img{:src=>"/chord/"+chord}
          %div{:id=>"chord_toggle"} Show/Hide Chords
          %p
            :redcloth
              Chords are for a soprano/concert size ukulele tuned _GCEA_
      .column.span-7.last
        :plain
          <script type="text/javascript">
          var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
          document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
          </script>
          <script type="text/javascript">
          var pageTracker = _gat._getTracker("UA-87136-12");
          pageTracker._initData();
          pageTracker._trackPageview();
          </script>
      .column.span-16.prepend-1
        %h5 More Tabs on Ukulele/Tom
        -@tabs.each do |t|
          %a{:class=>"bottom_link", :href => t[:url]}=t[:song]+" by "+t[:artist]
